<br>
<div class="btn-group" role="group" aria-label="Basic example">
  <div type="button">
    <%= link_to "Back", project_path(@project), class: "btn btn-dark"%>
  </div>
  <% if current_user.user_type == 'manager' %>
    <div type="button" >
      <%= link_to '  Assign  ', new_project_user_project_path(@project),class: "btn btn-dark" %>
    </div>
  <%end %>
</div>
<br>
<div class="container">
  <h2>Project Assigning List</h2>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr class="success">
        <th>Name</th>
        <th>Id</th>
        <th>Project Name</th>
        <th>Role</th>
      <% if current_user.user_type == 'manager' %>

        <th>Assigning</th>
        <%end%>

      </tr>
    </thead>
    <tbody>
      <% @user_projects.each do |assigning| %>
      <tr class="info">
        <%u=User.find(assigning.user_id) %> 
        <td><%= u.name%></td>
        <td><%= u.id%></td>
        <%p1=Project.find(assigning.project_id) %>
        <td><%= p1.name%></td>
        <td><%= u.user_type%></td>
        <% if current_user.user_type == 'manager' %>

        <td><%= link_to "Remove Assigning", project_user_project_path(@project,assigning), data: { turbo_method: :delete,turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
        <%end%>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>  


