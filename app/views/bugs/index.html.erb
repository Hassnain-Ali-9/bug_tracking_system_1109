<h1>Bugs</h1>
<div>
  <%= link_to 'New Bug', new_project_bug_path %>|
  <%= link_to "Show this project", @project %> 
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.type %></td>
        <td><%= bug.status %></td>
        <td><%= bug.deadline %></td>
        <td>
          <%= link_to 'Show', project_bug_path(@project,bug) %>
          <%= link_to 'Edit', edit_project_bug_path(@project,bug) %>
          <%= link_to 'Destroy', project_bug_path(@project,bug), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


