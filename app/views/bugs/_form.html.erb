<%= form_with model: @bug, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.datetime_field :deadline, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :type %>
    <%= form.select :type, Bug.types.keys, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.collection_select :project_id, Project.all, :id, :title, { prompt: "Select a Project" }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :creator_id %>
    <%= form.collection_select :creator_id, User.all, :id, :full_name, { prompt: "Select a Creator" }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :solver_id %>
    <%= form.collection_select :solver_id, User.all, :id, :full_name, { prompt: "Select a Solver" }, class: 'form-control' %>
  </div>
  <%= form.submit "Create Bug", class: 'btn btn-primary' %>
<% end %>
